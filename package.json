    "license": "MIT",
    "repository": "https://github.com/sirian/js",
    "workspaces": [
        "packages/*"
    ],
    "dependencies": {},
    "devDependencies": {
        "@types/jest": "^24.0.19",
        "coveralls": "^3.0.7",
        "husky": "^3.0.9",
        "jest": "^24.9.0",
        "lerna": "^3.18.1",
        "rimraf": "^3.0.0",
        "ts-jest": "^24.1.0",
        "ts-node": "^8.4.1",
        "tslint": "^5.20.0",
        "typescript": "^3.7.0-beta"
    },
    "scripts": {
        "ci:build": "yarn clean && yarn lint && yarn test && yarn build:all",
        "clean": "yarn build:clean && yarn test:clean",
        "build:reset": "yarn build:prepare cjs",
        "build:prepare": "ts-node scripts/prebuild.ts",
        "build:esm": "yarn build:prepare esm && yarn build",
        "build:cjs": "yarn build:prepare cjs && yarn build",
        "build": "tsc -b packages/*",
        "build:all": "yarn build:esm && yarn build:cjs",
        "build:clean": "yarn build --clean && rimraf packages/*/build",
        "build:watch": "yarn build --watch",
        "lint": "yarn tslint:lint",
        "lint:fix": "yarn tslint:fix",
        "tslint:lint": "tslint 'packages/*/{src,tests,example}/**/*'",
        "tslint:fix": "yarn tslint:lint --fix",
        "test": "yarn test:jest && lerna run test --parallel",
        "test:clean": "yarn test:jest --clearCache",
        "test:jest": "jest --config jest.config.json",
        "test:watch": "yarn test:jest --watch --maxWorkers=2",
        "lerna:publish": "lerna publish --from-git --yes --conventional-commits --yes"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn build:reset && yarn lint"
        }
    }
}

    "license": "MIT",
    "repository": "https://github.com/sirian/js",
    "workspaces": [
        "packages/*"
    ],
    "dependencies": {},
    "devDependencies": {
        "@types/jest": "^24.0.13",
        "coveralls": "^3.0.4",
        "husky": "^2.4.1",
        "jest": "^24.8.0",
        "lerna": "^3.15.0",
        "rimraf": "^2.6.3",
        "ts-jest": "^24.0.2",
        "ts-node": "^8.2.0",
        "tslint": "^5.17.0",
        "typescript": "^3.5.1"
    },
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "ci:build": "yarn clean && yarn lint && yarn build && yarn test",
        "clean": "yarn build:clean",
        "build": "tsc -b packages/*",
        "build:clean": "tsc -b packages/* --clean",
        "build:watch": "tsc -b packages/* --watch",
        "lint": "yarn tslint:lint",
        "lint:fix": "yarn tslint:fix",
        "tslint:lint": "tslint 'packages/*/{src,tests,example}/**/*'",
        "tslint:fix": "yarn tslint:lint --fix",
        "test": "yarn test:jest && lerna run test --parallel",
        "test:jest": "jest --config jest.config.json",
        "test:watch": "jest --config jest.config.json --watch",
        "lerna:publish": "lerna publish --from-git --yes --conventional-commits --yes"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint"
        }
    }
}

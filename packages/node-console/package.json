{
    "name": "@sirian/console",
    "description": "The Console component allows you to create command-line commands",
    "version": "6.2.7",
    "author": {
        "name": "Vasiliy Khayrulin",
        "email": "sirianru@gmail.com"
    },
    "license": "MIT",
    "keywords": [
        "console",
        "terminal",
        "application",
        "arguments",
        "options",
        "commands",
        "cli",
        "input",
        "output"
    ],
    "files": [
        "build/"
    ],
    "main": "build/index.js",
    "types": "build/index.d.ts",
    "dependencies": {
        "@sirian/common": "^4.38.9",
        "@sirian/decorators": "^1.2.4",
        "@sirian/error": "^2.0.7",
        "@sirian/event-dispatcher": "^4.2.4",
        "@sirian/ts-extra-types": "^3.42.6",
        "@sirian/unicode": "^1.0.3",
        "@sirian/xpromise": "^2.2.5",
        "@types/node": "^12.0.7",
        "error-stack-parser": "^2.0.2"
    },
    "scripts": {
        "ci:build": "yarn clean && yarn lint && yarn test && yarn build",
        "clean": "yarn build:clean",
        "build": "yarn build:clean && tsc --build",
        "build:clean": "rimraf build tsconfig.tsbuildinfo",
        "build:watch": "yarn build --watch",
        "lint": "yarn tslint:lint",
        "lint:fix": "yarn tslint:fix",
        "tslint:lint": "tslint '{src,tests}/**/*'",
        "tslint:fix": "yarn tslint:lint --fix",
        "test": "jest --config ../../jest.config.json --rootDir .",
        "test:watch": "yarn test --watch"
    },
    "publishConfig": {
        "access": "public"
    }
}

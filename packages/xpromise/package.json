{
    "name": "@sirian/xpromise",
    "description": "",
    "version": "2.2.3",
    "author": {
        "name": "Vasiliy Khayrulin",
        "email": "sirianru@gmail.com"
    },
    "license": "MIT",
    "files": [
        "build/"
    ],
    "main": "build/index.js",
    "types": "build/index.d.ts",
    "scripts": {
        "ci:build": "yarn clean && yarn lint && yarn test && yarn build",
        "clean": "yarn build:clean",
        "build": "yarn build:clean && tsc --build",
        "build:clean": "rimraf build tsconfig.tsbuildinfo",
        "build:watch": "yarn build --watch",
        "lint": "yarn tslint:lint",
        "lint:fix": "yarn tslint:fix",
        "tslint:lint": "tslint '{src,tests}/**/*'",
        "tslint:fix": "yarn tslint:lint --fix",
        "test": "jest --config jest.config.json",
        "test:watch": "yarn test --watch",
        "test:aplus": "yarn test:aplus:deferred && yarn test:aplus:xpromise",
        "test:aplus:deferred": "node --require ts-node/register node_modules/.bin/promises-aplus-tests tests/APlus/AsyncXPromiseAdapter.ts",
        "test:aplus:xpromise": "node --require ts-node/register node_modules/.bin/promises-aplus-tests tests/APlus/DeferredAdapter.ts",
        "benchmark": "node --require ts-node/register --expose-gc --nouse-idle-notification benchmark/index.ts"
    },
    "publishConfig": {
        "access": "public"
    },
    "devDependencies": {
        "@types/node": "^12.0.7",
        "promises-aplus-tests": "^2.1.2"
    }
}

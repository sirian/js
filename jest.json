{
    "roots": [
        "<rootDir>/packages/error/test",
    ],
    "snapshotSerializers": [
        "jest-serializer-path"
    ],
    "transform": {
        "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "/test[^/]*\\.tsx?$",
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "json",
        "js"
    ],
    "testEnvironment": "jsdom",
    "coveragePathIgnorePatterns": [
        "/node_modules/"
    ],
    "globals": {
        "ts-jest": {
            "tsConfig": "tsconfig.json"
        }
    }
}

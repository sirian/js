{
    "npmClient": "yarn",
    "useWorkspaces": true,
    "version": "independent",
    "stream": true,
    "parallel": true,
    "command": {
        "publish": {
            "allowBranch": "release",
            "conventionalCommits": true,
            "message": "chore(release): publish [skip-ci]"
        }
    },
    "ignoreChanges": [
        "packages/*/test/**",
        "packages/*/test-server/**"
    ]
}

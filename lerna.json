{
    "npmClient": "yarn",
    "useWorkspaces": true,
    "version": "independent",
    "stream": true,
    "command": {
        "publish": {
            "allowBranch": "master",
            "conventionalCommits": true,
            "message": "chore(release): publish"
        }
    },
    "ignoreChanges": [
        "packages/*/tests/**"
    ]
}
